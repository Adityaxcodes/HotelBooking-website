{
    "version": 2,
    "buildCommand": "echo 'No build needed for API-only deployment'",
    "outputDirectory": "api",
    "installCommand": "echo 'No install needed'",
    "functions": {
        "api/*.js": {
            "runtime": "@vercel/node"
        }
    },
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index"
        }
    ]
}